<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeEmployee">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_65sdp"
    android:background="@drawable/back_home"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/back"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/navcation"/>

        <Spinner
            android:id="@+id/spiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="@+id/back"
            app:layout_constraintStart_toEndOf="@id/navcation"
            app:layout_constraintTop_toTopOf="parent" />
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="@dimen/_45sdp"
    app:layout_constraintTop_toBottomOf="@id/back"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:src="@drawable/glass"
    android:layout_height="@dimen/_45sdp"
    android:id="@+id/imageuser" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imageuser"
        app:layout_constraintTop_toTopOf="@id/imageuser"
        android:text="@string/user_name"
        android:layout_marginStart="@dimen/_15sdp"
        android:textColor="#182A41"
        android:textSize="@dimen/_13sdp"
        android:id="@+id/username"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageuser"
           app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintBottom_toBottomOf="@id/imageuser"
            android:text=" Title Job"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="#182A41"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/namejob"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#BA8A13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageuser"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:id="@+id/view"
            android:layout_marginEnd="@dimen/_15sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/l1">
            <ImageView
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maney"
                android:src="@drawable/maney"/>
            <ImageView
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/note"
                android:src="@drawable/note"/>
            <ImageView
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changepassword"
                android:src="@drawable/secure"/>
            <ImageView
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/out"
                android:src="@drawable/out"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/l1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"

            android:id="@+id/l2">
            <TextView

                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_90sdp"
                android:id="@+id/customers"
                android:text="العملاء"
                android:paddingBottom="@dimen/_15sdp"
                android:gravity="center"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"
                android:background="@drawable/item_blu"
                android:drawableTop="@drawable/team"
                />
            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_90sdp"
                android:id="@+id/users3"
                android:text="القضايا"
                android:paddingBottom="@dimen/_15sdp"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:background="@drawable/item_qdaya"
                android:drawableTop="@drawable/law"
                />
            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_90sdp"
                android:id="@+id/users"
                android:text="الجلسات"
                android:paddingBottom="@dimen/_15sdp"
                android:gravity="center"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"
                android:background="@drawable/item_glsat"
                android:drawableTop="@drawable/lawg"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/l2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"

            android:id="@+id/l3">
            <TextView

                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_90sdp"
                android:id="@+id/users2"
                android:text="المهام"
                android:paddingBottom="@dimen/_15sdp"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:background="@drawable/item_red"
                android:drawableTop="@drawable/backlog"
                />
            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_90sdp"
                android:id="@+id/users33"
                android:text="الماليه"
                android:paddingBottom="@dimen/_15sdp"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:background="@drawable/item_green"
                android:drawableTop="@drawable/invoice"
                />
            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_92sdp"
                android:id="@+id/customer_service"
                android:text="الاستقبال"
                android:paddingBottom="@dimen/_15sdp"
                android:gravity="center"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:background="@drawable/item_orange"
                android:drawableTop="@drawable/customer_service"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/latest_tasks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/l3"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="#BA8A13"
            android:id="@+id/textlastestasks"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textlastestasks"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:id="@+id/rec"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>